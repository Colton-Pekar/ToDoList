@page
@model ToDoList.Pages.List.CreateModel

<br/>
<h2 class="text-info">Add item to active list</h2>
<br/>

<div class="border container" style="padding:60px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="List.ItemToDo">Insert Item</label>
            </div>
            <div class="col-6">
                <input asp-for="List.ItemToDo" class="form-control" />
            </div>
            <span asp-validation-for="List.ItemToDo" class="text-danger">Item is required</span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="List.CompletedBy">Completed by</label>
            </div>
            <div class="col-6">
                <input asp-for="List.CompletedBy" class="form-control" />
            </div>
            <span asp-validation-for="List.CompletedBy" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-suces form-control">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />}